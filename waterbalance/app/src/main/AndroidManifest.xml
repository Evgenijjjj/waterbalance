<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools" package="android.spb.waterbalance">

    <application
            android:name=".app.App"
            android:allowBackup="false"
            android:fullBackupOnly="false"
            android:label="@string/app_name"
            android:icon="@drawable/ic_water"
            android:roundIcon="@drawable/ic_water"
            tools:replace="android:allowBackup"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:ignore="GoogleAppIndexingWarning">

        <activity
                android:screenOrientation="portrait"
                android:name=".presentation.startpage_activity.StartPageActivity"/>

        <activity
                android:theme="@style/AppTheme.Launcher"
                android:screenOrientation="portrait"
                android:name=".presentation.splash_activity.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>
        <activity
                android:name=".presentation.wizard_activity.WizardActivity"
                android:screenOrientation="portrait"/>

        <activity
                android:screenOrientation="portrait"
                android:name=".presentation.new_user_activity.NewUserActivity"
        />
        <activity
                android:screenOrientation="portrait"
                android:name=".presentation.todo_activity.ToDoActivity"/>
    </application>
</manifest>
